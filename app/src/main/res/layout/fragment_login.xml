<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/pallete_black"
    tools:context="br.edu.ufcspa.snorlax_angelo.LoginActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:paddingTop="30dp"
        >

        <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            app:srcCompat="@drawable/ic_recording_night_large"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:id="@+id/imageView2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pallete_blue_weak"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-condensed"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:padding="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pallete_white"
            android:fontFamily="sans-serif-smallcaps"
            android:text="A sleep monitoring aplication"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="5dp"

            />

        />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/login_google"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_google_signin_light_normal_web_2x"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_weight="0.1"
        android:paddingBottom="10dp"
        android:onClick="onGmLogin"
        />

    <ImageButton
        android:id="@+id/login_facebook"
        android:layout_width="215dp"
        android:layout_height="27dp"
        android:src="@drawable/facebook"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_weight="0.1"
        android:paddingBottom="10dp"

        />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pallete_white"
        android:text="@string/tcle_link"
        android:fontFamily="sans-serif"
        android:id="@+id/tx_tcle_link"
        android:clickable="true" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/dpas_branco"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:id="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:layout_weight="0.1" />



</LinearLayout>
